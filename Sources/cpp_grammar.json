{
  "includes": "#include <iostream> \nusing namespace std;\n\n",
  "main": "%variable_section\nint main() {\nstatement\n\n\treturn 0;\n}",
  "variable_section": "%variables",
  "if_statement": "if ([args]) {\nstatement } ",
  "else_if_statement": "else if ([args]) {\nstatement } ",
  "else_statement": "else {\nstatement } ",
  "string_del": "\"",

  "variable_declaration": "%type %name;",
  "INT": "int",
  "BOOL": "bool",
  "FLOAT": "float",
  "STRING": "string",

  "mod_operator": "(%1 % %2)",
  "div_operator": "(%1 / %2)",
  "mul_operator": "(%1 * %2)",
  "sub_operator": "(%1 - %2)",
  "add_operator": "(%1 + %2)",

  "not_equal_operator": "(%1 != %2)",
  "less_equal_operator": "(%1 <= %2)",
  "greater_equal_operator": "(%1 >= %2)",
  "less_operator": "(%1 < %2)",
  "greater_operator": "(%1 > %2)",
  "equal_operator": "(%1 == %2)",
  "not_operator": "!(%1)",
  "or_operator": "(%1 || %2)",
  "and_operator": "(%1 && %2)",
  "literal_true": "true",
  "literal_false": "false",

  "std_output": "std::cout << %1;",
  "std_input": "std::cin >> %1;",
  "while_statement": "while (%1) {\nstatement }",
  "switch_statement": "switch (%1) {\nstatement }",
  "do_while_statement": "do {\nstatement } while (%1);",
  "case_statement": "case ([args]):\n statement break;\n",
  "default_statement": "default:\n statement break;\n",
  "for_statement": "for (%v0 = %1; %v0 < %2; %v0 += 1) {\nstatement }"
}
